<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="名前"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/orange_border_bg"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/text_home_qr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/text_home_qr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="QRコード読み取り"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/orange_border_bg"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/text_home_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/text_home_setting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="設定"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/orange_border_bg"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/text_home_child"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home_qr"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/text_home_child"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="子供アカウント"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/orange_border_bg"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home_setting"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
